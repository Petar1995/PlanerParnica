@model ParnicaViewModel

@{
    ViewBag.Title = "Dodaj parnicu";
}
<h1>Dodaj parnicu</h1>

<div class=" row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="VremeOdrzavanja"></label>
                <input asp-for="VremeOdrzavanja" class="form-control" />
                <span asp-validation-for="VremeOdrzavanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LokacijaOdrzvanja.Naslov"></label>
                <select asp-for="LokacijaOdrzvanja.Naslov" asp-items="@(new SelectList(Model.SveLokacije,"Naslov","Naslov"))"></select>
                <span asp-validation-for="LokacijaOdrzvanja.Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sudija.Ime">Sudija</label>
                <select asp-for="@Model.Sudija.Ime" asp-items="@(new SelectList(Model.SviKontakti,"Ime","Ime"))"></select>
                <span asp-validation-for="@Model.Sudija.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentifikatorPostupka"></label>
                <input asp-for="IdentifikatorPostupka" class="form-control" />
                <span asp-validation-for="IdentifikatorPostupka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojSudnice"></label>
                <input asp-for="BrojSudnice" class="form-control" />
                <span asp-validation-for="BrojSudnice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Tuzilac.Ime">Tuzilac</label>
                <select asp-for="@Model.Tuzilac.Ime" asp-items="@(new SelectList(Model.SviKontakti,"Ime","Ime"))"></select>
                <span asp-validation-for="@Model.Tuzilac.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Tuzeni.Ime">Tuzeni</label>
                <select asp-for="@Model.Tuzeni.Ime" asp-items="@(new SelectList(Model.SviKontakti,"Ime","Ime"))"></select>
                <span asp-validation-for="@Model.Tuzeni.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Napomena"></label>
                <input asp-for="Napomena" class="form-control" />
                <span asp-validation-for="Napomena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipPostupka.Naslov"></label>
                <select asp-for="TipPostupka.Naslov" asp-items="@(new SelectList(Model.TipoviPostupaka,"Naslov","Naslov"))"></select>
                <span asp-validation-for="TipPostupka.Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipUstanove"></label>
                <select asp-for="TipUstanove" asp-items="Html.GetEnumSelectList<TipUstanove>()"></select>
                <span asp-validation-for="TipUstanove" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Napravi parnicu</button>

        </form>
    </div>
</div>
 